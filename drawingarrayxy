<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<style>
body {
overflow: hidden;
}

canvas {
position: absolute;
top: 0;
left: 0;
}
</style>
</head>
<body>
<canvas id="canvas"></canvas>
<script>
const canvas = document.getElementById("canvas");
canvas.width = innerWidth;
canvas.height = innerHeight;
const ctx = canvas.getContext("2d");

var squares = [{x: 0, y: 0, color: "red"}, {x: 50, y: 0, color: "orange"}, {x: 100, y: 0, color: "yellow"}, {x: 150, y: 0, color: "#00EE00"}, {x: 200, y: 0, color: "#7777FF"}, {x: 250, y: 0, color: "#9800FF"}, {x: 300, y: 0, color: "blueviolet"}];

for (let i = 0; i < squares.length; i++) {
ctx.fillStyle = squares[i].color;
ctx.fillRect(squares[i].x, squares[i].y, 50, 50);
}
</script>

</body>
</html>
